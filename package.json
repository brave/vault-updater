  "license": "MPL-2.0",
  "dependencies": {
    "@newrelic/native-metrics": "^5.1.0",
    "@hapi/boom": "^9.0.0",
    "@hapi/h2o2": "^9.0.1",
    "@hapi/hapi": "^19.1.1",
    "@hapi/joi": "^17.0.2",
    "amqplib": "^0.4.1",
    "aws-sdk": "^2.2.30",
    "blipp": "^4.0.1",
    "logfmt": "^1.3.2",
    "moment": "^2.11.1",
    "mongodb": "^3.5.2",
    "proxy-agent": "^3.1.1",
    "randomstring": "^1.1.5",
    "request": "^2.83.0",
    "request-promise": "^4.2.5",
    "rewire": "^2.5.2",
    "newrelic": "^6.7.1",
    "semver": "^5.3.0",
