{
  "name": "vault-updater",
  "version": "1.0.1",
  "description": "Auto-update server for Brave laptop browser",
  "main": "index.js",
  "engines": {
    "node": "13.7.0",
    "npm": "6.13.6"
  },
  "scripts": {
    "start": "node src/index.js",
    "lint": "standard",
    "verify": "node tools/verify.js",
    "test": "S3_DOWNLOAD_KEY=1 S3_DOWNLOAD_SECRET=1 BEHIND_FASTLY=1 API_KEYS=a,b,c STORE_BRAVE_HEADERS=1 tap test/*.js",
    "test-win": "set BEHIND_FASTLY=1 && tap test/*.js"
  },
