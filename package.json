    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "nock": "^12.0.3",
    "standard": "^14.3.1",
    "tap": "^14.10.6"
  },
