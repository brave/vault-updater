    "babel-core": "^6.2.1",
    "babel-preset-es2015": "^6.1.18",
    "blipp": "^2.3.0",
    "boom": "^4.3.1",
    "glob": "^6.0.1",
    "h2o2": "^6.0.0",
    "hapi": "^11.1.2",
    "hapi-serve-s3": "^2.0.1",
    "hapi-set-header": "^1.0.0",
    "hot-shots": "^6.8.5",
    "inert": "^3.2.0",
    "joi": "^7.0.1",
    "logfmt": "^1.2.0",
    "moment": "^2.11.1",
    "mongodb": "^3.5.2",
